<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Typography" />

    <style name="Typography.Action">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Typography.Action.Filter" parent="Typography.Action">
        <item name="android:textColor">@color/white</item>
        <item name="android:button">@null</item>
        <item name="android:paddingStart">@dimen/extra__medium_plus_padding</item>
        <item name="android:paddingEnd">@dimen/extra__medium_plus_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/small_padding</item>
        <item name="android:layout_marginEnd">@dimen/small_padding</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

</resources>