<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="primaryButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:button">@null</item>
        <item name="android:paddingStart">@dimen/extra__medium_plus_padding</item>
        <item name="android:paddingEnd">@dimen/extra__medium_plus_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/small_padding</item>
        <item name="android:layout_marginEnd">@dimen/small_padding</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

</resources>
